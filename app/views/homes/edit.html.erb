<center>
  <header>
    <h1>Homes Edit</h1>
  </header>
  <%= form_with(model: @home, local: true) do |form| %>
    <% if @home.errors.any? %>
      <div id="error_explanation">
        <h2><%= @home.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @home.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <p class="user_label"><%= form.label :家名 %></p>
    <p class="user_input"><%= form.text_field :home, required: true %></p>

    <p class="user_label"><%= form.label :敷金 %></p>
    <p class="user_input"><%= form.number_field :sikikinn,min:0, required: true %></p>

    <p class="user_label"><%= form.label :礼金 %></p>
    <p class="user_input"><%= form.number_field :reikinn,min:0, required: true %></p>
    
    <p class="user_label"><%= form.label :面積 %></p>
    <p class="user_input"><%= form.number_field :space,min:0, required: true %></p>
    
    <p class="user_label"><%= form.label :地域 %></p>
    <p class="user_input"><%= form.text_field :area, required: true %></p>
    
    <p class="user_label"><%= form.label :家賃 %></p>
    <p class="user_input"><%= form.number_field :price,min:0, required: true %></p>
    
    <p class="user_label"><%= form.label :所在地 %></p>
    <p class="user_input">
      <%= form.fields_for :address do |ff| %>
        <p class="user_input"><%= ff.text_field :country,placeholder: "国" %><%= ff.text_field :state,placeholder: "都道府県"  %><%= ff.text_field :city,placeholder: "市町村"  %><%= ff.text_field :address,placeholder: "その他"  %></p>
      <% end %>
    </p>
    <p class="user_label"><%= form.label :LDK %></p>
    <p class="user_input"><%= form.select :ldk,[["1R","1R"],["1K","1K"],["1DK","1DK"],["2LDK","2LDK"],["3LDK","3LDK"]] %></p>
    
    <p class="user_label"><%= form.label :イメージ%></p>
    <p class="user_image"><%= form.file_field :image, multiple: true %></p>

    <p class="submit"><%= form.submit %></p>
  <% end %>
</center>