<center>
  <header>
    <h1>Homes一覧</h1>
  </header>
  <div class="errmsg">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
  </div>
  <div class="col-md-12">
    <aticle class="col-md-8">
      <div class="row">
        <% @home.each do |home| %>
        <div type="button" class="home_list btn btn-default col-md-9 col-md-offset-1">
          <%= link_to  home_path(home.id), class: "item_list" do %>
            <div class="item col-md-4"><%= "不動産業者 : "+ home.user.name %></div>
            <div class="item col-md-4"><%= "物件名 : "+ home.home %></div>
            <div class="item_image col-md-4"><%= image_tag(home.image.url) if home.image.present?  %></div>
            <div class="item col-md-3"><%= "家賃 : " + home.price.to_s %></div>
            <div class="item col-md-5"><%= "住所 : " + home.address %></div>
          <% end %>
        </div>
        <% end %>
      </div>
    </aticle>
    <aside class="col-md-4">
      <%= render 'search_form' %>
    </aside>
  </div>
  <% if logged_in? %>
    <% if current_user_admin_check %>
      <div class="ce btn btn-default col-xs-12 col-md-offset-4 col-md-2"><%= link_to '投稿', new_home_path %></div>
      <div class="ce  btn btn-default col-md-2"><%= link_to '住所から検索',homes_sendmail_path %></div>
    <% else %>
      <div class="ce  btn btn-default col-md-offset-5 col-md-2"><%= link_to '住所から検索',homes_sendmail_path %></div>
    <% end %>
  <% end %>
  
</center>
