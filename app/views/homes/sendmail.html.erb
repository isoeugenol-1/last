<center>
  <header>
    <h1>住所から検索</h1>
  </header>
  <%= form_tag homes_sendmail_path, method: :get do %>
  <div>
    <p class="user_label">KM</p>
    <p class="user_input"><%= number_field_tag :addresskm ,min: 0 %></p>
  </div>
  <div>
    <p class="user_label">住所</p>
    <p class="user_input"><%= text_field_tag :addressto %></p>
  </div>
  <%= submit_tag '検索' %>
  <% end %>
  <div class="col-md-12">
    <div class="row">
      <% for home in @home %>
        <div type="button" class="home_list btn btn-default col-md-9 col-md-offset-3">
          <%= link_to  home_path(home.id), class: "item_list" do %>
            <div class="item col-md-3"><%= "不動産業者 : "+ home.user.name %></div>
            <div class="item col-md-3"><%= "物件名 : "+ home.home %></div>
            <div class="item col-md-3"><%= "家賃 : " + home.price.to_s %></div>
            <div class="item_image col-md-3"><%= image_tag(home.image[0].url) if home.image[0].present? %></div>
            <div class="item col-md-4"><%= "住所 : " + home.address %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>


</center>