<center>
  <header>
    <h1>Editing user</h1>
  </header>
  <%= form_with(model: @user, local: true) do |form| %>

    <p class="user_label"><%= form.label :name %></p>
    <p class="user_text"><%= form.text_field :name %></p>

    <p class="user_label"><%= form.label :email %></p>
    <p class="user_text"><%= form.text_field :email %></p>

    <p class="user_label"><%= form.label :password %></p>
    <p class="user_text"><%= form.password_field :password %></p>
    
    <p class="user_label"><%= form.label :password_confirmation %></p>
    <p class="user_text"><%= form.password_field :password_confirmation %></p>

    <p class="user_label"><%= form.label :image %></p>
    <p class="user_image"><%= form.file_field :image %></p>

    <p class="submit"><%= form.submit %></p>

  <% end %>
  <%= link_to 'Back', user_path(current_user.id) %>
</center>